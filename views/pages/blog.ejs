<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= meta.title %></title>
  <meta name="description" content="<%= meta.description %>">
  <link rel="canonical" href="<%= meta.canonical %>">
  <link rel="stylesheet" href="/css/output.css">
</head>
<body>
  <%- include('../partials/nav') %>

  <%- include('../partials/header', { title: 'Blog', subtitle: 'Expert financial advice and wealth-building strategies' }) %>

  <div class="container mx-auto px-4 py-16">
    <% if (posts.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <% posts.forEach(post => { %>
          <%- include('../partials/post-card', { post }) %>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center py-16">
        <p class="text-xl text-muted">No articles found.</p>
      </div>
    <% } %>
  </div>

  <%- include('../partials/footer') %>
  <button id="back-to-top" class="back-to-top"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path></svg></button>
  <script src="/js/main.js"></script>
  <script src="/js/darkmode.js"></script>
</body>
</html>
