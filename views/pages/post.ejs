<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= meta.title %></title>
  <meta name="description" content="<%= meta.description %>">
  <meta name="keywords" content="<%= meta.keywords %>">
  <link rel="canonical" href="<%= meta.canonical %>">
  <meta property="og:title" content="<%= meta.title %>">
  <meta property="og:description" content="<%= meta.description %>">
  <meta property="og:image" content="<%= meta.imageUrl %>">
  <meta property="og:url" content="<%= meta.fullUrl %>">
  <meta property="og:type" content="article">
  <meta name="twitter:card" content="summary_large_image">
  <script type="application/ld+json"><%- JSON.stringify(schema.post) %></script>
  <script type="application/ld+json"><%- JSON.stringify(schema.breadcrumb) %></script>
  <link rel="stylesheet" href="/css/output.css">
</head>
<body>
  <%- include('../partials/nav') %>

  <div class="container mx-auto px-4 pt-24 pb-16 max-w-4xl">
    <!-- Category Badge and Meta Info -->
    <div class="flex flex-wrap items-center gap-4 mb-6">
      <span class="category-badge text-sm px-4 py-2 bg-primary text-white font-semibold rounded-full"><%= post.category %></span>
      <span class="text-sm text-gray-600 dark:text-gray-400 font-medium"><%= post.readingTime %> min read</span>
      <span class="text-sm text-gray-600 dark:text-gray-400">â€¢</span>
      <span class="text-sm text-gray-600 dark:text-gray-400 flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
        </svg>
        <span><%= post.views %> views</span>
      </span>
    </div>

    <!-- Title - Bigger on Desktop -->
    <h1 class="text-3xl md:text-5xl lg:text-6xl font-black mb-6 md:mb-8 lg:mb-10 md:mt-12 leading-tight"><%= post.title %></h1>

    <!-- Author and Date -->
    <div class="flex items-center gap-4 mb-8">
      <div class="w-12 h-12 aspect-square bg-primary rounded-full flex items-center justify-center shadow-md p-2">
        <img src="/images/leaf.png" alt="Mint Money Guide" class="w-full h-full object-contain">
      </div>
      <div>
        <p class="font-semibold text-dark-bg dark:text-white">By <%= post.author.name %></p>
        <p class="text-sm text-gray-600 dark:text-gray-400"><%= new Date(post.publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
      </div>
    </div>

    <!-- Social Share Buttons -->
    <div class="flex flex-wrap items-center gap-3 mb-8 pb-6 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
      <span class="text-sm font-semibold text-gray-900 dark:text-white">Share:</span>
      <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(post.title) %>&url=<%= encodeURIComponent(meta.fullUrl) %>"
         target="_blank"
         rel="noopener noreferrer"
         class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary/90 text-white rounded-lg transition-colors duration-200 font-medium text-sm">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
        </svg>
        Twitter
      </a>
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(meta.fullUrl) %>"
         target="_blank"
         rel="noopener noreferrer"
         class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary/90 text-white rounded-lg transition-colors duration-200 font-medium text-sm">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
        Facebook
      </a>
      <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= encodeURIComponent(meta.fullUrl) %>&title=<%= encodeURIComponent(post.title) %>"
         target="_blank"
         rel="noopener noreferrer"
         class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary/90 text-white rounded-lg transition-colors duration-200 font-medium text-sm">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        LinkedIn
      </a>
      <button id="copyLinkBtn" onclick="copyToClipboard()"
              class="flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary/90 text-white rounded-lg transition-colors duration-200 font-medium text-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path>
        </svg>
        <span id="copyLinkText">Copy Link</span>
      </button>
    </div>

    <img src="<%= post.featuredImage %>" alt="<%= post.title %>" class="w-full rounded-2xl shadow-2xl mb-12">

    <div class="prose-custom">
      <%- post.content %>
    </div>

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mt-12 pb-8 border-b border-gray-200 dark:border-gray-700">
      <% post.tags.forEach(tag => { %>
        <span class="tag inline-block px-3 py-1 text-sm bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full hover:bg-primary hover:text-white transition-colors duration-200">#<%= tag %></span>
      <% }) %>
    </div>

    <div class="card p-8 mt-12 flex items-center gap-6 border-2 border-primary/10">
      <div class="w-24 h-24 aspect-square bg-primary rounded-full flex items-center justify-center flex-shrink-0 shadow-lg p-4">
        <img src="/images/leaf.png" alt="Mint Money Guide" class="w-full h-full object-contain">
      </div>
      <div>
        <p class="text-sm text-muted font-semibold mb-1 uppercase tracking-wide">Written by</p>
        <h3 class="font-bold text-2xl mb-3 text-dark-bg dark:text-white"><%= post.author.name %></h3>
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed"><%= post.author.bio %></p>
      </div>
    </div>

    <% if (relatedPosts.length > 0) { %>
    <section class="mt-20">
      <h2 class="text-3xl font-black mb-12 text-center">Continue Reading</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% relatedPosts.forEach(relatedPost => { %>
          <%- include('../partials/post-card', { post: relatedPost }) %>
        <% }) %>
      </div>
    </section>
    <% } %>
  </div>

  <%- include('../partials/footer') %>
  <script>
    // Copy link to clipboard function
    async function copyToClipboard() {
      const url = '<%= meta.fullUrl %>';
      const button = document.getElementById('copyLinkBtn');
      const text = document.getElementById('copyLinkText');

      try {
        await navigator.clipboard.writeText(url);
        text.textContent = 'Copied!';
        button.classList.remove('bg-primary', 'hover:bg-primary/90');
        button.classList.add('bg-green-600', 'hover:bg-green-700');

        setTimeout(() => {
          text.textContent = 'Copy Link';
          button.classList.remove('bg-green-600', 'hover:bg-green-700');
          button.classList.add('bg-primary', 'hover:bg-primary/90');
        }, 1000);
      } catch (err) {
        console.error('Failed to copy:', err);
        text.textContent = 'Failed';
        setTimeout(() => {
          text.textContent = 'Copy Link';
        }, 1000);
      }
    }
  </script>
  <script src="/js/main.js"></script>
  <script src="/js/darkmode.js"></script>
</body>
</html>
