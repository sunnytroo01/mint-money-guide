<header class="bg-background py-10 md:py-16">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-6xl font-black mb-6 text-balance fade-in"><%= title %></h1>
    <% if (typeof subtitle !== 'undefined' && subtitle) { %>
      <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 max-w-3xl mx-auto fade-in animation-delay-200"><%= subtitle %></p>
    <% } %>
  </div>
</header>
