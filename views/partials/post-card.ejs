<article class="post-card group" itemscope itemtype="https://schema.org/BlogPosting">
  <a href="/blog/<%= post.slug %>" class="block" itemprop="url">
    <div class="overflow-hidden rounded-t-xl">
      <img
        src="<%= post.featuredImage %>"
        alt="<%= post.title %> - <%= post.excerpt.substring(0, 80) %>..."
        class="post-card-image w-full h-48 object-cover"
        loading="lazy"
        width="800"
        height="450"
        itemprop="image">
    </div>
    <div class="p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="category-badge"><%= post.category %></span>
        <span class="text-sm text-muted font-medium"><%= post.readingTime %> min read</span>
      </div>

      <h3 class="text-xl font-bold mb-3 line-clamp-2 leading-tight" itemprop="headline"><%= post.title %></h3>

      <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3 leading-relaxed" itemprop="description"><%= post.excerpt %></p>

      <meta itemprop="datePublished" content="<%= new Date(post.publishedAt).toISOString() %>">
      <meta itemprop="author" content="<%= post.author.name %>">

      <div class="flex items-center justify-between text-sm text-muted pt-4 border-t border-gray-200 dark:border-gray-700">
        <span class="font-medium" itemprop="datePublished"><%= new Date(post.publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></span>
        <div class="flex items-center gap-3">
          <span class="flex items-center font-medium">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
            <%= (post.views || 0).toLocaleString() %>
          </span>
          <span class="flex items-center font-medium">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              <%= (post.wordCount || 0).toLocaleString() %>
            </svg>
          </span>
        </div>
      </div>
    </div>
  </a>
</article>
